<!-- scripts -->
  <script src="/javascript/es5-shim.min.js" type="text/javascript"></script>
  <script src="/javascript/es5-sham.min.js" type="text/javascript"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
  
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" type="text/javascript"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
  <script src="http://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places"></script>
  <script src="/javascript/autocomplete.js" type="text/javascript"></script>
  <script src="/javascript/WhatsNearby.js" type="text/javascript"></script>

  <script src="/javascript/googleMap.js" type="text/javascript"></script>
  <script src="/javascript/application.js"></script>
  
  <title>
    Vakanz | <%= @city.name %>
  </title>
</head>

<body>
  <!-- search bar -->

<header>
  <div id="sticker_results">
    <div class="search2">
               <a href="/"><h4 class="logo-left"> <span><i class="fa fa-viacoin"></i></span>akanz</h4></a>
      <div class="container">
        <div class="row">

          <div class="col-md-10 col-md-offset-1">

            <div class="form-section">
              <div class="row">
                             <form role="form" action="/search">
                  <div class="col-md-8 col-sm-6 col-xs-8 col-md-offset-3 no-padding">

                    <div class="form-group">

                      <div class="ui-widget">
                        <label class="sr-only" for="location">Location</label>
                        <input class="form-control" id="location" 
                          placeholder= "Where would you like to go?" 
                          type="text"
                          <%= params[:location] && !params[:location].empty? ?
                              "value='#{params[:location]}'" : "" %>
                        >
                      </div>
                    </div>
                  </div>

                  <div class="col-md-3 col-sm-3 col-xs-3">
                    <button class="btn btn-default btn-primary" id="submit"
                    type="submit">Search</button>
                  </div>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

   <br>
 
  <div class="container">
    <div class="row">
      <div class="col-md-7 col-sm-12 col-xs-12 no-padding">
      <div class="top_space">
      <h2><span id="result_search"><%= @searched_city %></span></h2>
    </div>
            <div class="weather">
             <div class="table-responsive">          
  <table class="table">
    <thead>

      <tr>
        <th>JAN</th>
        <th>FEB</th>
        <th>MAR</th>
        <th>APR</th>
        <th>MAY</th>
        <th>JUN</th>
        <th>JUL</th>
        <th>AUG</th>
        <th>SEP</th>
        <th>OCT</th>
        <th>NOV</th>
        <th>DEC</th>
      </tr>

    </thead>

    <tbody>

      <tr>
        <% 12.times.each do |index| %>
          <td class="avg-mean"><%= @city.daily_mean_temperatures.where(month_id:index+1).first.temperature ? "#{@city.daily_mean_temperatures.where(month_id:index+1).first.temperature}&deg;" : "n/a" %></td>
          <% end %>
      </tr>

      <tr class="weather-widget">
        <td><i class="wi wi-day-sunny"></i></td>
        <td><i class="wi wi-day-cloudy"></i></td>
        <td><i class="wi wi-day-rain"></i></td>
        <td><i class="wi wi-day-cloudy-high"></i></td>
        <td><i class="wi wi-day-thunderstorm"></i></td>
        <td><i class="wi wi-day-showers"></i></td>
        <td><i class="wi wi-day-rain-mix"></i></td>
        <td><i class="wi wi-day-haze"></i></td>
        <td><i class="wi wi-day-lightning"></i></td>
        <td><i class="wi wi-day-sleet"></i></td>
        <td><i class="wi wi-day-sunny"></i></td>
        <td><i class="wi wi-day-fog"></i></td>
      </tr>

      <tr>
        <% 12.times.each do |index| %>
          <td class="avg-high"><%= @city.average_high_temperatures.where(month_id:index+1).first.temperature ? "#{@city.average_high_temperatures.where(month_id:index+1).first.temperature}&deg;" : "n/a" %></td>
        <% end %>
      </tr>
    
      <tr>
      <% 12.times.each do |index| %>
        <td class="avg-low"><%= @city.average_low_temperatures.where(month_id:index+1).first.temperature %>&deg;</td>
        <% end %>
      </tr>

    </tbody>
  </table>

  <span>
    <h4 class="when-to-visit"><i class="fa fa-suitcase"></i> Best Months to Visit:</h4>
    <p class="when-to-visit-months">
      <span>
        <% @city.ideal_months.each do |month| %>
          <%= month.month_id %>&nbsp;
        <% end %>
      </span>
    </p>
  </span>
  
  <hr>
  
  </div>
  
</div>
</div>
    <div class="col-md-5 col-sm-12 col-xs-12 no-padding">
        <div id="wn2"></div>  <!-- google map -->
      </div>
    </div>
  </div>
   <br>

   <br>
    
  <div class="container">
    <div class="city-info">
      <div class="row">
          <div class="col-md-4 col-sm-6 col xs-12 no-padding">
           <ul>
           <li><i class="fa fa-plane"></i> Flights From You: <span class="pull-right" id="flight-from-you"><a href="http://www.skyscanner.ca/">LOGO</a></span> </li>
            <li><i class="fa fa-bed"></i>
Hotel Cost: <span class="pull-right">$ <%= sprintf("%.2f", @city.costs.first.hotel) %><small>/day</small></span></li> 
            <li><i class="fa fa-home"></i> Airbnb Apartment: <span class="pull-right">$ <%= sprintf("%.2f", @city.costs.first.airbnb_median) %><small>/d</small></span></li>
            <li><i class="fa fa-map-marker"></i>
Walk Score: <span class="pull-right">10</span></li>
            
            
           
            </ul>
          </div>


          <div class="col-md-4 col-sm-6 col xs-12 no-padding">
          <ul>
           <li><i class="fa fa-cutlery"></i> Cost of Meal: <span class="pull-right">$10</span></li>
            <li><i class="fa fa-beer"></i>
Pint of Beer (0.5l): <span class="pull-right">$1</span></li>
            <li><i class="fa fa-coffee"></i>
cappuccino: <span class="pull-right">$2</span></li> 
            <li><i class="fa fa-glass"></i> Coca-Cola (0.5L): <span class="pull-right">$1.50</span></li>      
            </ul>
          </div>


          <div class="col-md-4 col-sm-6 col xs-12 no-padding">
                <ul>
                 <li><i class="fa fa-desktop"></i>
Internet Speed: <span class="pull-right">350 <small>/mbs</small></span></li>
                <li><i class="fa fa-wifi"></i>
                Free Wifi: <span class="pull-right">Yes</span></li>
           <li><i class="fa fa-glass"></i>
Night life: <span class="pull-right">8.0</span></li>

                   
            </ul>
          </div>
        </div>
      </div>
  </div>
